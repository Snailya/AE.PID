<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:AE.PID.UI.Shared;assembly=AE.PID.UI.Shared"
             xmlns:viewModels="clr-namespace:AE.PID.UI.Avalonia.VisioExt"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AE.PID.UI.Avalonia.VisioExt.MaterialPaneView"
             x:DataType="viewModels:MaterialPaneViewModel">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <viewModels:MaterialPaneViewModel />
    </Design.DataContext>

    <Grid Margin="4">
        <TextBlock IsVisible="{Binding Code, Converter={x:Static StringConverters.IsNullOrEmpty}}"
                   TextAlignment="Center"
                   FontSize="12"
                   VerticalAlignment="Center">
            No Material Content
        </TextBlock>
        <Grid IsSharedSizeScope="True">
            <ScrollViewer>
                <StackPanel DataContext="{Binding Material}"
                            IsVisible="{Binding  Converter={x:Static ObjectConverters.IsNotNull}}">
                    <TextBlock shared:LabelBehav.Value="名称" Text="{Binding Name}" />
                    <TextBlock shared:LabelBehav.Value="品牌" Text="{Binding Brand}" />
                    <TextBlock shared:LabelBehav.Value="型号" Text="{Binding Type}" />
                    <TextBlock shared:LabelBehav.Value="规格" Text="{Binding  Specifications}" />
                    <TextBlock shared:LabelBehav.Value="技术参数" Text="{Binding TechnicalData}" />
                    <TextBlock shared:LabelBehav.Value="物料号" Text="{Binding Code}" />
                    <ItemsControl ItemsSource="{Binding Properties}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border>
                                    <TextBlock
                                        shared:LabelBehav.Value="{Binding Name}"
                                        Text="{Binding Value}" />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>