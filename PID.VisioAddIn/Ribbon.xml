<?xml version="1.0" encoding="UTF-8"?>
<customUI onLoad="Ribbon_Load" xmlns="http://schemas.microsoft.com/office/2009/07/customui">
    <ribbon>
        <tabs>
            <tab idMso="TabAddIns" label="AE PID">
                <group id="grpEdit" label="编辑">
                    <button id="load_libraries"
                            label="库"
                            onAction="LoadLibraries"
                            screentip="加载模具库"
                            size="large"
                            getImage="GetButtonImage"
                    />
                    <button id="format_page"
                            label="初始化"
                            onAction="FormatPage"
                            screentip="设置文档的样式和网格"
                            getImage="GetButtonImage"
                    />
                    <button id="open_select_tool"
                            label="选择"
                            onAction="OpenSelectTool"
                            screentip="打开高级选择工具"
                            getImage="GetButtonImage"
                    />
                    <button id="update_document"
                            label="更新"
                            onAction="UpdateDocument"
                            screentip="使用模具库中的模具更新文档中的模具"
                            getImage="GetButtonImage"
                    />
                </group>
                <group id="grpExport" label="导出">
                    <button id="open_export_tool"
                            label="BOM"
                            onAction="OpenExportTool"
                            screentip="打开导出工具"
                            size="large"
                            getImage="GetButtonImage"
                    />
                </group>
                <group id="grpAbout" label="关于">
                    <button id="edit_configuration"
                            label="设置"
                            onAction="EditSettings"
                            screentip="打开软件配置"
                            size="large"
                            getImage="GetButtonImage"
                    />
                </group>
            </tab>
        </tabs>
    </ribbon>

    <!--This section defines custom context menu controls.-->
    <contextMenus>
        <contextMenu idMso="ContextMenuShape">
            <button id="insert_linked_element"
                    label="添加关联元件"
                    onAction="AddLinkedControl"
                    getVisible="CanAddLinkedControl"
            />
            <button id="highlight_linked_element"
                    label="高亮关联元件"
                    onAction="Highlight"
                    getVisible="CanHighlight"
            />
            <button id="copy_with_linked_elements"
                    label="带关联元件复制"
                    onAction="CopyWithLinkedElements"
                    getVisible="CanCopyWithLinkedElements"
            />
        </contextMenu>
    </contextMenus>
</customUI>